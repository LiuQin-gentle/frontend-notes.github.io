<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>这是ejs模板</title>
    <style>
        table{
            border-collapse: collapse;
        }
        th,td{
            border: 1px #000 solid;
            font-size: 20px;
            padding: 10px;
            text-align: center;
        }

        caption{
            font-size: 25px;
            font-weight: bold;
        }
        a{
            text-decoration: none;
            color: #4d5b8a;
        }
    </style>
</head>
<body>
    <% for(const stu of stus){ %>
        <%=stu.name %> - <%=stu.age %> - <%=stu.gender %> - <%=stu.address %><br>
    <% } %>
    <hr>
    <table>
        <caption>学生列表</caption>
        <thead>
            <th>学号</th>
            <th>姓名</th>
            <th>年龄</th>
            <th>性别</th>
            <th>地址</th>
            <th>操作</th>
        </thead>
        <tbody>
            <% for(const stu of stus){%>
                <tr>
                    <td><%=stu.id%></td>
                    <td><%=stu.name%></td>
                    <td><%=stu.age%></td>
                    <td><%=stu.gender%></td>
                    <td><%=stu.address%></td>
                    <td>
                        <a href="/to-update?id=<%=stu.id%>">修改</a>
                        <a onclick="return confirm('确认删除吗？')" href="/delete?id=<%=stu.id%>">删除</a>
                    </td>
                </tr>
            <%} %>
        </tbody>
    </table>
    <form action="./add-student" method="post">
        <p>姓名<input name="name" type="text"></p>
        <p>年龄<input name="age" type="number" max="150" min="0"></p>
        <p>性别
            <input name="gender" type="radio" value="男">男
            <input name="gender" type="radio" value="女">女
        </p>
        <p>地址<input name="address" type="text"></p>
        <p><button type="submit">添加</button></p>
    </form>
</body>
</html>